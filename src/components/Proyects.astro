---
import SocialPill from '../components/SocialPill.astro'

const PROJECTS = [
{
    title: 'Immer Landing Page',
    description: 'Pagina Web, en la que trabajé como FrontEnd Developer, utilizando ReactJs como principal tecnología, su función es que el público vaya sabiendo de que se trata y se suscriba al proyecto, mientras que el producto es retocado para su lanzamiento.',
    link: 'https://www.immer.world',
    download: false,
    github: '#',
    image: '/projects/ImmerLanding.jpg',
    tags: ['ReactJs','TailWindCSS','Firebase','HTML','JavaScript']
},
{
    title: 'Immer Mobile WebApp',
    description: 'Mobile WebApp, en la que trabajé como FrontEnd Developer, utilizando NextJs como principal tecnología junto a ReactJs, se basa en una Web donde los clientes pueden comprar tickets para espectáculos.',
    link: 'https://github.com/tomassilvente/immerMobile',
    download: false,
    github: '#',
    image: '/projects/ImmerMobile.jpg',
    tags: ['NextJs','ReactJs','TailWindCSS','Firebase','HTML','JavaScript']
},
{
    title: 'Página Web Blair',
    description: 'Página Web diseñada y desarrollada para mostrar los recitales y nuevos lanzamientos de la cantante conocida como Blair, se utilizó ReactJs como principal tecnología.',
    link: 'https://blairbladdee.netlify.app',
    download: false,
    github: '#',
    image: '/projects/blair.png',
    tags: ['ReactJs','TailWindCSS','HTML','JavaScript']
},
{
    title: 'Super Héroes Web',
    description: 'WebApp hecha con ReactJs, con el propósito de mostrar diferentes superhéroes, tanto de Marvel como de DC, con un login (Simple, sin formulario) y un buscador de héroes.',
    link: 'https://github.com/tomassilvente/Heroes',
    download: false,
    github: '#',
    image: '/projects/HeroesApp.png',
    tags: ['React','HTML','CSS','JS', 'Bootstrap', 'API']
},
{
    title: 'Liga Cubb',
    description: 'WebApp desarrollada con NextJs con la funcionalidad de Manejar los equipos, las fechas, las tablas de posiciones, cruces de playoffs, tabla de goleadores y amarillas de la Liga Universitaria de Bahia Blanca.',
    link: 'https://www.linkedin.com/feed/update/urn:li:activity:7226289833994776578/',
    download: false,
    github: '#',
    image: '/projects/ligacubb.png',
    tags: ['React','HTML','CSS','JS','NextJs','TailWindCSS', 'API']
},
{
    title: 'WebApp Inmobiliaria Centro',
    description: 'Página Web para inmobiliaria local, utilizando como framework Flask con Python, esto conectado a una Base de Datos MySQL',
    link: 'https://github.com/tomassilvente/inmobiliaria',
    download: false,
    github: '#',
    image: '',
    tags: ['Python','Flask','MySQL','HTML','BoosTrap']
}]
---
{PROJECTS.map(({ title, description, tags, image, download, link }) =>(
    <article class="my-5 mb-20 md:flex">
        {
            image?
                <img 
                    class="rounded-lg shadow-2xl shadow-white/15  items-center md:w-[35%] mb-[35px] md:mb-0 w-[50%] mx-auto h-[20%]"
                    src={image} 
                    alt={title}
                    />
            : ''
        }
        <div class="md:ml-[45px] mx-auto"> 
            <h3 class="lg:text-2xl text-xl font-semibold text-[#90f4ff] mb-2">{title}</h3>
            <p class="mb-7 text-pretty">{description}</p>    
            {download? (
                <a href={link} download={`${title}.exe`} class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-800 bg-white border border-gray-200 rounded-lg hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:outline-none focus:ring-gray-100 focus:text-blue-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-gray-700">
                    Descargar Archivo
                </a>
            )
            :(
                <a href={link} target="_blank" class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-800 bg-white border border-gray-200 rounded-lg hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:outline-none focus:ring-gray-100 focus:text-blue-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-gray-700">
                    Ir a La Web
                    <svg class="w-3 h-3 ms-2 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
                    </svg>
                </a>
            )
        }
            <ul class="flex gap-4 mt-7 flex-wrap mb-6">
                {tags.map(tag =>(
                    <li>
                        <SocialPill >
                            {tag}    
                        </SocialPill>
                    </li>
                ))}
            </ul>
        
        </div>
        
        
    </article>
))}